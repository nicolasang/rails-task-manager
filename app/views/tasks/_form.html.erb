
<%= form_for(@task) do |form_object| %>
  <div class="form-group">
    <%= form_object.label :title %>
    <%= form_object.text_field :title, class:'form-control' %>
  </div>
  <div class="form-group">
    <%= form_object.label :details %>
    <%= form_object.text_field :details, class:'form-control' %>
  </div>

  <% if @task.completed %>
    <div>
        <p><i class="far fa-check-circle"></i>
        Make task uncompleted</p>
    </div>
  <% else %>
    <div>
      <p><i class="far fa-circle"></i>
      Make task completed</p>
    </div>
  <% end %>

  <p></p>
  <%= form_object.submit (@task.new_record? ? 'Add task' : 'Update task'), class: 'btn btn-primary' %>

<% end %>

<p></p>
<i class="fas fa-undo-alt"></i><%= link_to " Back to list", tasks_path %>
